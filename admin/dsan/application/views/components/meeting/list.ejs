<!--begin:: Add Meeting Modal-->

<div class="modal fade" id="addMeetingModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add Meeting</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form method="post" id="addMeetingForm">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="meetingName" class="form-control-label">Meeting Name:</label>
                                <input type="text" class="form-control" id="meetingName" name="meetingName" placeholder="Please enter meeting name">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="meetingId" class="form-control-label">Meeting Id:</label>
                                <input type="text" class="form-control" id="meetingId" name="meetingId">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="meetingDate" class="form-control-label">Meeting Date</label>
                                <input type="text" class="form-control" id="meetingDate" name="meetingDate" readonly placeholder="Select metting date" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="meetingTime" class="form-control-label">Meeting Time</label>
                                <input type="text" class="form-control" id="meetingTime" name="meetingTime" readonly placeholder="Select metting Time" value="10:00:00 AM" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="meetingDuration" class="form-control-label">Meeting Duration:</label>
                                <input type="text" class="form-control" id="meetingDuration" name="meetingDuration" value="0:05:00">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="meetingParticipant" class="form-control-label">Total Participant:</label>
                                <input type="text" class="form-control" id="meetingParticipant" name="meetingParticipant" placeholder="Please enter total participant">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!--end:: Addb Meeting Modal-->


